---

import BadgeDisney from "./BadgeDisney.astro";
import BadgeNetflix from "./BadgeNetflix.astro";

const { name, year, rating, image, platform} = Astro.props;

---

<div class="flex flex-col justify-between bg-card-movie w-full text-white rounded-4xl shadow-2xs text-center transition-transform duration-200 mb-1 hover:scale-105 hover:shadow-2xl">

    <div>
        <img src={image} alt={name} class="rounded-2xl mb-4" />
        <h2 class="text-2xl">{name}</h2>
        <p class="text-2">Año: {year}</p>
        <p class="text-2">Valoración: {rating}</p>
    </div>

    <div class="mt-2 flex justify-center ">
        {platform === 'disney' && <BadgeDisney />}
        {platform === 'netflix' && <BadgeNetflix />}
    </div>
</div>

